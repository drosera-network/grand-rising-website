---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "DEVELOPERS",
  description = "A comprehensive suite of tools and resources designed to make building on DROSERA simple and powerful."
} = Astro.props;

---

<section id="developers" class="py-24 bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-extrabold font-ndot tracking-wide text-orange-500 mb-6">{title}</h2>
      <p class="max-w-3xl mx-auto text-xl text-gray-300">
        {description}
      </p>
    </div>
    
  </div>
</section> 